# Copy to .env and adjust values (do not commit .env)
# cp env.example .env && chmod 600 .env

# Required
HOSTNAME_SHORT="host-1"
TS_AUTHKEY="tskey-auth-REDACTED"

# Domains (primary + optional aliases)
PRIMARY_DOMAIN="example.com"
EXTRA_DOMAINS="ts.example.com,alt.example.net"

# User mode:
# - false: use existing cloud user (recommended for Azure); keys go to SUDO_USER unless TARGET_USER is set
# - true: create NEW_USER (default placeholder: superadmin)
MANAGE_USER="false"
NEW_USER="superadmin"
TARGET_USER=""

# SSH / firewall
SSH_PORT="22222"
KEEP_SSH_PORT_22="true"

# SSH keys source (pick one)
GITHUB_KEYS_USER="github-username"
# AUTHORIZED_KEYS_URL="https://raw.githubusercontent.com/<org>/<repo>/<ref>/authorized_keys"
